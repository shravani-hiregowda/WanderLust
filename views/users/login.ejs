<% layout("layouts/boilerplate") %>

    <div class="row">
        <h1 class="col-6 offset-3">Login into WanderLust</h1>
        <div class="col-6 offset-3">
            <form action="/login" method="POST">
                <div class="mb-3">
                    <label for="username" class="form-lable">Username</label>
                    <input name="username" placeholder="Enter name" type="text" id="username" class="form-control" required>    
                      <div class="invalid-feedback">
                        Please enter the name                      
                    </div>
                </div>
                    <div class="mb-3">
                    <label for="password" class="form-lable">Password</label>
                    <input name="password" placeholder="Enter password" type="password" id="password" class="form-control" required>    
                      <div class="invalid-feedback">
                        Please enter password                     
                    </div>
                </div>
                <div>
                    <button class="btn btn-dark ">Login</button>
                </div>
            </form>
        </div>
    </div>
